@{
    ViewBag.Title = "Giỏ hàng";

    Layout = "~/Views/Shared/_LayoutPageTrangChu.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/CSS/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/CSS/styles/categories_responsive.css">
<h2 style="text-align:center; margin-top: 180px"> THÔNG TIN GIỎ HÀNG</h2>
<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">
            <!-- Sidebar -->
            <!-- Main Content -->

            <div class="row">
                <div class="col-md-12" id="load_data">
                    @Html.Action("Partial_Item_Cart", "GioHang")
                </div>
                <div class="col-md-12">
                    @if (ViewBag.CheckCart != null)
                    {
                        <div class="text-right">
                            <a href="@Url.Action("XoaGioHang","GioHang")" class="btn btn-danger btnDeleteAll">Xóa</a>
                            <a href="@Url.Action("DatHang","GioHang")" class="btn btn-success">Đặt Hàng</a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>