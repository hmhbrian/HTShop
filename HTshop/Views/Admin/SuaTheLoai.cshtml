@model HTshop.Models.THELOAI

@{
    ViewBag.Title = "Sửa Thể Loại";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Sửa Thể Loại</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.MaLoai)

                        <div class="form-group">
                            @Html.LabelFor(model => model.TheLoai1, htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.TheLoai1, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TheLoai1, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success">Lưu</button>
                        </div>
                    }
                </div>
                <div class="card-footer text-muted">
                    <div class="text-center">
                        @Html.ActionLink("Trở Lại", "TheLoai", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
